name: IBM Cloud Auto Restart

on:
  push:
    branches: [ master ]
  pull_request:
    branches: [ master ]
  schedule:
    - cron: '0 12 * * MON'

jobs:
  ibm-cloud-restart:
    runs-on: ubuntu-latest

    steps:
    - uses: actions/checkout@v2

    - name: Init
      run: |
        chmod -R 777 ./IBM_Cloud_CLI/
    - name: Login IBM Cloud
      env:
        IBM_EMAIL: ${{ secrets.IBM_EMAIL }}
        IBM_PWD: ${{ secrets.IBM_PWD }}
        IBM_RGN: ${{ secrets.IBM_RGN }}
      run: |
        ./IBM_Cloud_CLI/ibmcloud login -u "$IBM_EMAIL" -p "$IBM_PWD" -r "$IBM_RGN"
    - name: Target IBM Cloud
      env:
        IBM_EMAIL: ${{ secrets.IBM_EMAIL }}
      run: |
        ./IBM_Cloud_CLI/ibmcloud target --cf-api 'https://api.ng.bluemix.net' -o "$IBM_EMAIL" -s 'dev'  
        ./IBM_Cloud_CLI/ibmcloud cf install
    - name: Restart IBM Cloud
      env:
        IBM_APP_NAME: ${{ secrets.IBM_APP_NAME }}
      run: |
        ./IBM_Cloud_CLI/ibmcloud cf restart "$IBM_APP_NAME"
